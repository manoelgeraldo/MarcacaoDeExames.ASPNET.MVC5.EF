@model IEnumerable<Shared.ViewModels.PacienteViewModel>

@{
    ViewBag.Title = "Paciente";
}

<h2>Pacientes Cadastrados</h2>

<p>
    <a class="btn btn-success" href=@Url.Action("NovoPaciente", "Pacientes")>Novo Paciente</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CPF)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DataNascimento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sexo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telefone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        <a class="btn btn-primary" href=@Url.Action("AlterarPaciente", "Pacientes", new { id = item.Id })>Editar</a>
        <a class="btn btn-info" href=@Url.Action("VisualizarPaciente", "Pacientes", new { id = item.Id })>Visualizar</a>
        <a class="btn btn-danger" href=@Url.Action("ExcluirPaciente", "Pacientes", new { id = item.Id })>Excluir</a>
    </td>
</tr>
}

</table>

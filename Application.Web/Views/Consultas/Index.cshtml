@model IEnumerable<Shared.ViewModels.ConsultaViewModel>

@{
    ViewBag.Title = "Consulta";
}

<div class="row g-3">
    <div class="col d-flex justify-content-start">
        <h2 class="me-2">Consultas Cadastradas</h2>
        <a class="btn btn-success m-2" href=@Url.Action("NovaConsulta", "Consultas")>Nova</a>
    </div>
</div>

<table class="table table-hover table-responsive table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoExame)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exame)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataConsulta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HorarioConsulta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Protocolo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoExame.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exame.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Protocolo)
            </td>
            <td>
                <a class="btn btn-primary" href=@Url.Action("AlterarConsulta", "Consultas", new { id = item.ConsultaId })>Editar</a>
                <a class="btn btn-info" href=@Url.Action("VisualizarConsulta", "Consultas", new { id = item.ConsultaId })>Visualizar</a>
                <a class="btn btn-danger" href=@Url.Action("Excluir", "Consultas", new { id = item.ConsultaId })>Excluir</a>
            </td>
        </tr>
    }

</table>

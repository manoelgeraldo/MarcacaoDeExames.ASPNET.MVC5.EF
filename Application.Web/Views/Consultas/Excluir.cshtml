    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a class="btn btn-primary" href=@Url.Action("Index", "Consultas")>Voltar</a>
        </div>
    }
